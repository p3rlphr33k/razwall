__author__ = "Andrea Bonomi <a.bonomi@endian.com>"
__date__ = "2017-06-22"

import sys
from endian.core.endianbus import EndianBus

if __name__ == '__main__':
    if len(sys.argv) < 2:
        print('usage: %s TOPIC <PAYLOAD>' % sys.argv[0])
        sys.exit(2)
    topic = sys.argv[1]
    payload = ' '.join(sys.argv[2:])
    bus = EndianBus()
    bus.publish(topic, payload)

