/sbin/jobcontrol call openvpnjob.client_disconnect --common_name "$common_name" \
    --dev "$dev" \
    --local "$ifconfig_pool_remote_ip" \
    --remote "$trusted_ip" \
    --remote_port "$trusted_port" \
    --bytes_received "$bytes_received" \
    --bytes_sent "$bytes_sent"
exit 0
